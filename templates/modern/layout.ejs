<!DOCTYPE html>
<html lang="<%= site.lang || 'zh-CN' %>" data-theme="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= doc.metadata.title || doc.name %> - <%= site.title %>
  </title>
  <meta name="description" content="<%= site.description || '' %>">

  <link rel="stylesheet" href="/assets/modern/main.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
  <!-- 顶部导航 -->
  <header class="header">
    <div class="header-container">
      <div class="logo">
        <% if (site.logo) { %>
          <img src="<%= site.logo %>" alt="<%= site.title %>">
          <% } %>
            <span class="logo-text">
              <%= site.title %>
            </span>
      </div>

      <nav class="nav">
        <% if (navigation.topbar && navigation.topbar.length> 0) { %>
          <% navigation.topbar.forEach(item=> { %>
            <a href="<%= item.link %>" class="nav-item">
              <%= item.text %>
            </a>
            <% }) %>
              <% } %>
      </nav>

      <div class="header-actions">
        <button class="theme-toggle" aria-label="切换主题">
          <svg class="sun-icon" width="20" height="20" viewBox="0 0 20 20">
            <circle cx="10" cy="10" r="4" fill="currentColor" />
          </svg>
          <svg class="moon-icon" width="20" height="20" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" fill="currentColor" />
          </svg>
        </button>

        <% if (site.socialLinks && site.socialLinks.length> 0) { %>
          <% site.socialLinks.forEach(link=> { %>
            <a href="<%= link.link %>" class="social-link" title="<%= link.title || link.icon %>">
              <%= link.icon %>
            </a>
            <% }) %>
              <% } %>
      </div>
    </div>
  </header>

  <!-- 主内容 -->
  <div class="main-container">
    <!-- 侧边栏 -->
    <aside class="sidebar">
      <nav class="sidebar-nav">
        <%- navigation.sidebar.map(item=> renderSidebarItem(item)).join('') %>
      </nav>
    </aside>

    <!-- 内容区 -->
    <main class="content">
      <article class="article">
        <%- content %>
      </article>

      <!-- 页面导航 -->
      <div class="page-nav">
        <a href="#" class="page-nav-prev">← 上一页</a>
        <a href="#" class="page-nav-next">下一页 →</a>
      </div>
    </main>

    <!-- 目录 -->
    <% if (doc.content.toc && doc.content.toc.length> 0) { %>
      <aside class="toc">
        <div class="toc-title">目录</div>
        <nav class="toc-nav">
          <%- renderToc(doc.content.toc) %>
        </nav>
      </aside>
      <% } %>
  </div>

  <script src="/assets/modern/main.js"></script>
</body>

</html>

<% function renderSidebarItem(item) { let html=`<div class="sidebar-item">
  ${item.link ? `<a href="${item.link}" class="sidebar-link">${item.text}</a>` : `<div class="sidebar-label">
    ${item.text}</div>`}`

  if (item.items && item.items.length > 0) {
  html += `<div class="sidebar-children ${item.collapsed ? 'collapsed' : ''}">
    ${item.items.map(child => renderSidebarItem(child)).join('')}
  </div>`
  }

  html += `</div>`
  return html
  }

  function renderToc(items) {
  return `<ul class="toc-list">
    ${items.map(item => `
    <li class="toc-item">
      <a href="#${item.slug}" class="toc-link">${item.title}</a>
      ${item.children && item.children.length > 0 ? renderToc(item.children) : ''}
    </li>
    `).join('')}
  </ul>`
  }
  %>
