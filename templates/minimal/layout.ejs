<!DOCTYPE html>
<html lang="<%= site.lang || 'zh-CN' %>">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= doc.metadata.title || doc.name %> - <%= site.title %>
  </title>
  <link rel="stylesheet" href="/assets/minimal/main.css">
</head>

<body>
  <div class="container">
    <header>
      <h1 class="site-title">
        <%= site.title %>
      </h1>
      <nav>
        <% if (navigation.topbar) { %>
          <% navigation.topbar.forEach(item=> { %>
            <a href="<%= item.link %>">
              <%= item.text %>
            </a>
            <% }) %>
              <% } %>
      </nav>
    </header>

    <main>
      <%- content %>
    </main>

    <footer>
      <p>&copy; <%= new Date().getFullYear() %>
          <%= site.title %>
      </p>
    </footer>
  </div>
</body>

</html>
